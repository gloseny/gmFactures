{
  "name": "gestionfactures",
  "version": "1.0.0",
  "main": "src/main/main.js",
  "description": "Application de gestion de factures desktop",
  "author": "GestionFactures",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development concurrently \"vite\" \"electron .\"",
    "build": "vite build && electron-builder",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "NODE_ENV=development electron .",
    "postinstall": "electron-rebuild",
    "dist": "electron-builder"
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "better-sqlite3": "^12.6.2",
    "date-fns": "^4.1.0",
    "jspdf": "^4.1.0",
    "jspdf-autotable": "^5.0.7",
    "lucide-react": "^0.570.0",
    "react": "^18.3.1",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0",
    "recharts": "^3.7.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.4.49",
    "postcss-import": "^16.1.0",
    "tailwindcss": "^3.4.15",
    "vite": "^7.3.1"
  },
  "build": {
    "appId": "com.gestionfactures.app",
    "productName": "gmFactures",
    "directories": {
      "output": "release"
    },
    "files": [
      "src/main/**/*",
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.business"
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
    "category": "Office",
    "target": ["AppImage", "deb"],
    "maintainer": "Votre Nom <votre@email.com>"
  }
  }
}
